#include <stdio.h>
#include<math.h>
int main(){
    int num1 = 0;
    printf(" enter an integer of any value");
    scanf(" %d", &num1);
    if(num1 == 0){
        printf("number entered is 0");} // compiler error "Expected ';' after expression??
    else if(num1 > 0); { // (error1)Expected expression (error2) if statment has empty body??
        printf("number entered is positive");} //Expected ';' after expression??
    else(num1 < 0);{ //(error 1)Expected ';' after expression (error #2) Expression result unsued(error3)Expected expression??
        printf("number entered is negitive");}
    }

    
    


